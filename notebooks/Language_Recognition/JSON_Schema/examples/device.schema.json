{
    "$id": "https://example.com/device.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "deviceType": {
            "type": "string"
        }
    },
    "required": [
        "deviceType"
    ],
    "oneOf": [
        {
            "properties": {
                "deviceType": {
                    "const": "smartphone"
                }
            },
            "$ref": "https://example.com/smartphone.schema.json"
        },
        {
            "properties": {
                "deviceType": {
                    "const": "laptop"
                }
            },
            "$ref": "https://example.com/laptop.schema.json"
        }
    ]
}